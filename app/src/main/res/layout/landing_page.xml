<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_landing_page"
    >

    <ImageView
        android:layout_width="400dp"
        android:layout_height="350dp"
        android:src="@drawable/landing_page_cats"
        android:contentDescription="cat image"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:text="Get to know more about Cat"
        android:textSize="40dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:fontFamily="@font/dmsans_bold"
        />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="We will provide informations about cats around the world and its' nutritious foods"
        android:layout_gravity="center"
        android:gravity="center"
        android:fontFamily="@font/dmsans_regular"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        >

        <com.google.android.material.button.MaterialButton
                android:id="@+id/button_get_started"
                android:layout_width="320dp"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:backgroundTint="#2EC4B6"
                app:cornerRadius="25dp"
                android:fontFamily="@font/dmsans_bold"
                app:icon="@drawable/arrow_right"
                app:iconSize="13dp"
                android:paddingLeft="30dp"
                app:iconGravity="end"
                app:iconPadding="8dp"
                android:text="Get Started"
                android:textAllCaps="false"
                android:textColor="@color/white" />

    </RelativeLayout>


</LinearLayout>